{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "version": 3,
        "nodeVersion": "18.x",
        "serverFiles": [
          "server/**",
          "api/**",
          "plugins/**",
          "composables/**",
          "config/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "buildCommand": "nuxt build",
  "devCommand": "nuxt dev",
  "framework": "nuxt",
  "outputDirectory": ".output/public"
}
