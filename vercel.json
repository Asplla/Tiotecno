{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "config": {
        "version": 3,
        "nodeVersion": "18.x",
        "generateStaticRoutes": true,
        "postcss": {
          "plugins": {
            "tailwindcss": {},
            "autoprefixer": {}
          }
        },
        "serverFiles": [
          "server/**",
          "api/**",
          "plugins/**",
          "composables/**",
          "config/**",
          "locales/**",
          "assets/**",
          "components/**",
          "layouts/**",
          "pages/**",
          "*.{js,ts,json}"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NITRO_PRESET": "vercel"
  }
}
